<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod3LabE.BuyAlcohol"
             Title="BuyAlcohol">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label x:Name="Out_Alcohol" Text="You can buy alcohol legally in..." Padding="20, 10, 20, 10" FontSize="24" Margin="30,0,0,30"></Label>
        <Label x:Name="ForBirthDate" Text="Please enter your birthday below:" FontSize="18" Margin="30,0,0,30"></Label>

        <DatePicker x:Name="birthDate"
                    SemanticProperties.Hint="Click to open the date picker menu, and select a date."
                    FontSize="18" 
                    Format="D" 
                    Margin="30,10,20,30"
                    DateSelected="OnDateSelected"/>
    </VerticalStackLayout>
</ContentPage>