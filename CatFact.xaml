<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod3LabE.CatFact"
             Title="CatFact">
    <VerticalStackLayout>
        <Label
            x:Name="Fact"
            Text="A random cat fact will appear here."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="RandomCatFact"
            Text="Random Cat Fact"
                SemanticProperties.Hint="Click to generate a random cat fact above this button on the page."
                Clicked="RandomClick"></Button> 
    </VerticalStackLayout>
</ContentPage>