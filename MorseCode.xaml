<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod3LabE.MorseCode"
             Title="{x:Static strings:AppResources.MorseCode}">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label x:Name="Out_char" 
               FontSize="20" 
               TextColor="Black" 
               Margin="30,10,30,10" 
               VerticalTextAlignment="Center" 
               HorizontalTextAlignment="Center" 
               BackgroundColor="Beige"></Label>
        <Label x:Name="In_char" 
               FontSize="20" 
               TextColor="Black" 
               Margin="30,10,30,10" 
               VerticalTextAlignment="Center" 
               HorizontalTextAlignment="Center" 
               BackgroundColor="Beige"></Label>

        <Button x:Name="DotButton" 
                Text="{x:Static strings:AppResources.DotButton}"
                SemanticProperties.Hint="Click to enter a dot character, for the morse code page."
                Clicked="Dot_Clicked" 
                TextColor="Black" 
                BackgroundColor="Aquamarine" 
                CornerRadius="25"></Button>
        <Button x:Name="DashButton" 
                Text="{x:Static strings:AppResources.DashButton}"
                SemanticProperties.Hint="Click to enter a dash character, for the morse code page."
                Clicked="Dash_Clicked" 
                TextColor="Black" 
                BackgroundColor="Aqua" 
                CornerRadius="25"></Button>
        <Button x:Name="SpaceButton" 
                Text="{x:Static strings:AppResources.SpaceButton}"
                SemanticProperties.Hint="Click to enter a space character, for the morse code page."
                Clicked="Space_Clicked" 
                BackgroundColor="Coral" 
                CornerRadius="25"></Button>
    </VerticalStackLayout>
</ContentPage>